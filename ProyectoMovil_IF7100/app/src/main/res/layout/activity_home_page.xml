<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jorge.u_dentalmobile.Homescreen"
    android:clickable="false"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="top|center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:id="@+id/imageView2"
                    android:background="@drawable/homelogo" />

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/imageView3"
                    android:background="@drawable/logo"
                    android:layout_alignWithParentIfMissing="false"
                    android:layout_marginRight="25dp"
                    android:layout_marginEnd="28dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/linearLayout"
        android:weightSum="1">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="37dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Escoja una de las opciones:"
            android:id="@+id/textView2"
            android:textColor="#ffffffff"
            android:textSize="20dp"
            android:layout_weight="0.40"
            android:gravity="fill_vertical" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffd3e4ff"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnReportes"
                        android:background="@drawable/report" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="74dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="  Reportes"
                        android:id="@+id/textView3"
                        android:textSize="20dp"
                        android:gravity="fill" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:weightSum="1">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnCitas"
                        android:background="@drawable/calendar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="  Citas"
                        android:id="@+id/textView4"
                        android:textSize="20dp"
                        android:gravity="fill" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="137dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnCreditos"
                        android:background="@drawable/credit" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="62dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="  CrÃ©ditos"
                        android:id="@+id/textView5"
                        android:clickable="false"
                        android:textSize="20dp"
                        android:gravity="fill" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.52">

                    <ImageButton
                        android:layout_width="35dp"
                        android:layout_height="40dp"
                        android:id="@+id/btnSalir"
                        android:background="@drawable/logout" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

